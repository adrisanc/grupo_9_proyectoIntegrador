<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de usuarios</title>
    <link rel="icon" type="image/x-icon" href="/img/logoFace.svg">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" /> <!--Libreria fontawesome-->
    <link rel="stylesheet" href="/css/register.css"> <!--Enlazar HTML y CSS-->
    <script src="https://code.iconify.design/2/2.1.2/iconify.min.js"></script>
</head>
<body>    
      <!-- HEADER-->
 <!-- <%- include('../partials/header') %>-->

    <main class="register">
        <table>
            <thead>
                <tr>
                    <td> Id</td>
                    <td> Nombre de Usuario</td>
                    <td> Correo</td>
                    <td> Opciones</td>                   

                </tr>
            </thead>

            <tbody>
                <% users.forEach( user => { %>
                <tr>
                    

                        <td> <%= user.id %> </td>
                        <td> <%= user.user_name %> </td>
                        <td> <%= user.email %> </td>
                        <td>
                            <a href="/user/edit/<%= user.id%> ">Editar</a>
                        </td>
                    
                </tr>
                <%}) %> 
                
            </tbody>
        </table>
        
    </main>
    
    <!-- FOOTER-->
     <!-- <%- include('../partials/footer') %>-->
      
</body>
</html>