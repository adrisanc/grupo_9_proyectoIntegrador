		<script src="https://code.iconify.design/2/2.1.2/iconify.min.js"></script>

        <title>Lista de productos</title>
    </head>
	
	<body>
		<!-- Header -->
	<%- include('partials/header') %>
	
	<div  class="container container-sm container-md container-recommendations">
		<div class="row">
			<div class="col-12 collection">
				<h2>Lista de Productos</h2>
			</div>
			<% products.forEach( (product) => {%> 
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="recommendations-section">
					<article class="recommendation-product">                
						<img src="img/productsImages/<%= product.image%>" alt="imagen del producto">
						<div class="product-price">
							<h3><%=product.product_name%></h3>
							<p><%= product.product_description%> </p>
							<p>$<%=toThousand(product.price)%></p>
							<div class="button-view-details">
							   <a href="/products/edit/<%= product.id%>">Editar</a>
							   <form action="/products/delete/<%= product.id%>" method="POST">
									   <button type="submit">Borrar</button>
								   </form>
							</div>
						</div>
					</article>
				</section>
			</div>
		<%}) %>
		</div>

	</div>
	<%- include('partials/footer') %>
	</body>
