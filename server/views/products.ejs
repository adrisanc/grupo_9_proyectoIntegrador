        <title>Productos</title>
    </head>
<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->

	<!-- todos los productos -->
	<main>
		<h1 class="products-title">Todos los productos</h1>
		<section class="products-section">			
			<% products.forEach(product => { 
				let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0);
			%>
			<section class="product-container">

					<img src="/img/productsImages/<%= product.image%>" alt="imagen de producto">
					<h3><%=product.productName%></h3>
					<p>$<%=toThousand(product.price)%></p>
					<!-- <span><%= product.discount%>% OFF</span> -->
					<a href="/products/product-detail/<%= product.id%>" class="view-detail">VER DETALLES</a>				
					<button class="select-button">Comprar Ahora</button>
                    <button class="select-button">Agregar al carrito</button>
			</section>
			<% }); %>
		</section>
		

	</main>
	<!-- todos los productos -->

	<!-- footer -->
	<%- include("./partials/footer.ejs")%>
	<!-- /footer -->

</body>	
</html>