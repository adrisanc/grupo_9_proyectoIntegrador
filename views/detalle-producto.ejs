                        </select>
                        <button>Comprar Ahora</button>
                        <button>Agregar al carrito</button>
                    </div>
                </div>
            </article>
        </section>
        <!--Others Products-->
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h2>Recomendaciones</h2>
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            
                            <div class="carousel-item active ">
                                <div class="row">
                                    
                                    <div class="col-4 container-recommendations">
                                        <% peliculas.forEach(product => { 
                                            let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0);	
                                        %> 
                                        <article class="recommendation-product">
                                            <img src="img/<%= product.image%>" alt="Capitan America">
                                            <div class="product-price">
                                                <h3><%=product.productName%></h3>
                                                <p>$<%=toThousand(product.price)%></p>
                                                <div class="button-view-details">
                                                    <button > <a href="/products/detail/<%= product.id%>">VER DETALLES</a></button>
                                                </div>
                                            </div>
                                        </article>
                                        <% }); %>
                                       
                                    </div>                                    
                                </div>
                            </div>
                            <div class="carousel-item">
                                <div class="row">
                                    
                                    <div class="col-4 container-recommendations">
                                        <% peliculas.forEach(product => { 

                                            let finalPrice = (product.price * ((100 - product.discount) / 100)).toFixed(0);
