<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Bootstrap Grid Stylesheet -->
        <link rel="icon" type="image/x-icon" href="/img/logoFace.svg">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">  
        <link rel="stylesheet" href="../css/home.css">
        <script src="https://kit.fontawesome.com/6fda1860f4.js" crossorigin="anonymous"></script>
        <title>Bienvenido a Funkoshop</title>
    </head>
<body>   <!-- HEADER-->
  <%- include('partials/header') %>


    <section class="banner">
        <div>
        <img src="/img/banner harry.PNG" alt="">
        </div>
    </section>


    <!--Nuevos Lanxamientos-->    

    <div class="container container-sm container-md container-recommendations">
		<div class="row">
			<div class="col-12">
				<h2>Nuevos Lanzamientos</h2>
			</div>
			<!-- Show the "visited" products -->
			<% products.forEach(product => { 
				%> 
		<div class="col-12 col-sm-6 col-lg-3">
			<section class="recommendations-section">
                <article class="recommendation-product">                
                    <img src="img/productsImages/<%= product.image%>" alt="imagen del producto">
                    <div class="product-price">
                        <h3><%=product.productName%></h3>
                        <p>$<%=toThousand(product.price)%></p>
                        <div class="button-view-details">
                           <a href="/product-detail/<%= product.id%>">VER DETALLES</a>
                        </div>
                    </div>
                </article>
			</section>
		</div>
		<% }); %>

		</div>
	</div>



    <!--FOOTER-->
    <%- include("./partials/footer.ejs")%>

</body> 
</html>